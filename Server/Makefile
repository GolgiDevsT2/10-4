PKG_DIR		=	$(HOME)/Golgi-Apple-Pkg/v2-02-09
#PKG_DIR	=	$(HOME)/Dropbox/PLATFORM-LOCAL-BUILD/build_support
JDK_BIN		=	/usr/bin
JRE_BIN		=	/usr/bin


JAVAC		=	$(JDK_BIN)/javac
JAVA		=	$(JRE_BIN)/java
JAR		=	$(JDK_BIN)/jar
LIBS		=	libs/httpclient-4.3.3.jar:libs/httpcore-4.3.2.jar:libs/commons-logging-1.1.3.jar:libs/commons-lang3-3.3.2.jar:libs/commons-io-2.4.jar
CLASSPATH	=	$(PKG_DIR)/common/garrick_combined.jar:$(PKG_DIR)/common/golgi_j2se.jar:$(LIBS)
JO_DIR		=	io/golgi/example/tenfour/gen

all:
	@if [ ! -d libs ]; then sh getjars.sh; fi
	@cp $(PKG_DIR)/common/golgi_j2se.jar libs/
	mkdir -p $(JO_DIR)
	$(JAVA) -classpath $(CLASSPATH) com.openmindnetworks.golgi.garrick.Garrick -i ../TenFour.thrift  -jo $(JO_DIR)
	$(JAVAC) -classpath $(CLASSPATH) io/golgi/example/tenfour/gen/*.java io/golgi/example/tenfour/*.java
	$(JAR) -Mcf TenFour.jar io/golgi/example/tenfour/*.class io/golgi/example/tenfour/gen/*.class

clean:
	@rm -rf libs
	@find . -name '*.java' | while read f; do if [ `head -2 $$f | egrep -c "IS_AUTOGENERATED_SO_ALLOW_AUTODELETE=YES"` = "1" ]; then echo "Delete $$f"; rm -f $$f; fi; done
	@find . -name '*.class' | xargs rm
	@find . -name '*~' | xargs rm
	@rm -f TenFour.jar

spotless:clean

RTCP	=	 TenFour.jar:$(CLASSPATH):libs/golgi_j2se.jar

run:all
	$(JAVA) -classpath $(RTCP) io.golgi.example.tenfour.TenFour -devKey `cat ../Golgi.DevKey` -appKey `cat ../Golgi.AppKey`

